" vrapper configuration file
let mapleader=';'

" set smartident
set autoindent
set nospell

inoremap <leader>g <ESC>
vnoremap <leader>g <Esc>
vnoremap v <Esc>
nnoremap <leader>zz :w<CR>
nnoremap <leader>a ^
nnoremap H ^
nnoremap <leader>e $
nnoremap L $
nnoremap <leader>mm %
nnoremap <leader>bs :ls<CR>
nnoremap <leader>xx :set nohlsearch<CR>
nnoremap <SPACE><SPACE> :
inoremap <C-l> <RIGHT>
inoremap <C-h> <LEFT>
nnoremap u :undo<CR>
nnoremap <C-r> :redo<CR>